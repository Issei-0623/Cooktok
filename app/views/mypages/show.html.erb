<div class="mypage">
  <% if current_user.avatar.attached? %>
    <%= image_tag current_user.avatar, class: 'avatar' %>
  <% else %>
    <%= image_tag 'default_avatar.png', class: 'avatar' %>
  <% end %>

  <h1><%= current_user.name %>さん、ようこそ！</h1>
  <p>CookTokへログイン中です。</p>

  <div class="actions">
    <%= link_to "動画を探す", "#", class: "btn btn-primary" %>
    <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-secondary" %>
  </div>
</div>

